<script>
    $(function(){
        (function(){
             $.get('/allpros',(pros)=>{
            let r=''
            let q=''
            $('#pros').empty()
            $('#main').empty()
            
            for(let i=0;i<pros.length;i++){
                r+=`<div class="col-xl-4 col-lg-4 col-md-6 col-sm-10 col-xs-10">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="${pros[i].imgurl}" style="width:100%" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">${pros[i].name}</h5>
                    <p class="card-text">Vendor- ${pros[i].vendor}</p>
                    <p class="card-text">Price- ${pros[i].price}</p>
                    <p class="card-text">Category- ${pros[i].cat}
                    </p>
                </div>
                </div><br/>
            </div>`
            q+=`<div class="col-xl-4 col-lg-4 col-md-6 col-sm-10 col-xs-10">
            <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="${pros[i].imgurl}" style="width:100%" alt="Card image cap">
            <div class="card-body" pid="${pros[i].id}" name="${pros[i].name}" vendor="${pros[i].vendor}" price="${pros[i].price}" cat="${pros[i].cat}">
                <h5 class="card-title">${pros[i].name}</h5>
                <p class="card-text">Vendor- ${pros[i].vendor}</p>
                <p class="card-text">Price- ${pros[i].price}</p>
                <p class="card-text">Category- ${pros[i].cat}
                </p>
                <button class="btn btn-primary" onclick="addtocart(this)">Add to cart</button>
            </div>
            </div>
            <br/>
        </div>`
            }
            $('#pros').append(r)
            $('#main').append(q)
        })
            $.get('/allcats',(cats)=>{
             let p=''
             for(let i=0;i<cats.length;i++){
                 p+=`<option>${cats[i].catName}</option>
                 `
             }
             $('#srch').append(p)
         })
          window.addtocart=function(e){
                console.log(`pid=${$(e).parent().attr('pid')}`)
            $.get(`/addcart?pid=${$(e).parent().attr('pid')}&uid=${$('#uid').text()}&name=${$(e).parent().attr('name')}&vendor=${$(e).parent().attr('vendor')}&price=${$(e).parent().attr('price')}&cat=${$(e).parent().attr('cat')}`,(something)=>{
                console.log(something)
            })
         }
        })()
        window.delnot=function(el,i){
            $(el).parent().remove()
            $.get(`/delnot?id=${i}`,(x)=>{})
        }
        window.clrnots=function(el){
            $(el).parent().remove()
            $.get(`/clearnots?id={{user.id}}`,(x)=>{})
        }
        
        $.get('/getnots?uid={{user.id}}',(nots)=>{
            if(nots.length==0){
                
            }
            else{
                $('#noti').css('color','yellow')
                str=''
                for(let i=0;i<nots.length;i++){
                    str+=`<a class="dropdown-item" href="#">${nots[i].message}&nbsp;&nbsp;&nbsp;<i class="fa fa-times" style="color:red" onclick=delnot(this,${nots[i].notid})></i></a>
                    `
                }
                $('#dropdown').append(str)
            }
        })
        $('#lgout').click(function(){
            $.get('/user/logout',()=>{

            })
        })
       $('#srchbtn').click(function(){
           $('#srchmain').empty()
           $.get(`/getbycat?catname=${$('#srch').val()}`,(pros)=>{
               let y=''
               for(let i=0;i<pros.length;i++){
                   y+=`<div class="col-xl-4 col-lg-4 col-md-6 col-sm-10 col-xs-10">
            <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="${pros[i].imgurl}" style="width:100%" alt="Card image cap">
            <div class="card-body" pid="${pros[i].id}" name="${pros[i].name}" vendor="${pros[i].vendor}" price="${pros[i].price}" cat="${pros[i].cat}">
                <h5 class="card-title">${pros[i].name}</h5>
                <p class="card-text">Vendor- ${pros[i].vendor}</p>
                <p class="card-text">Price- ${pros[i].price}</p>
                <p class="card-text">Category- ${pros[i].cat}
                </p>
                <button class="btn btn-primary" onclick="addtocart(this)">Add to cart</button>
            </div>
            </div>
            <br/>
        </div>
                   `
               }
               $('#srchcon').css('visibility','visible')
               $('#srchmain').html(y)
           })
       })
         $('#drop').click(function(){
             $('#noti').css('color','white')
         })
    })
</script>
